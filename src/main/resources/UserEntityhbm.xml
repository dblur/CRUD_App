<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entity.User" table="userinfo" schema="public" catalog="JavaWebApp">
        <id name="id">
            <column name="id" sql-type="bigint"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="role">
            <column name="role" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>